{
  "manifest_version": 3,
  "name": "Smart Link Sharer",
  "description": "Transform the way you share links with AI-powered previews, summaries, and more.",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "clipboardWrite",
    "notifications"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/icon16.jpg",
      "48": "icons/icon16.jpg",
      "128": "icons/icon16.jpg"
    }
  },
  "icons": {
    "16": "icons/icon16.jpg",
    "48": "icons/icon16.jpg",
    "128": "icons/icon16.jpg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    }
  ]
}
